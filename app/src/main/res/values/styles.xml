<resources>
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:background">@android:color/white</item>

        <!-- OR use specific button styles -->
        <item name="buttonBarPositiveButtonStyle">@style/BlueButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/BlueButtonStyle</item>
    </style>

    <style name="BlueButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>