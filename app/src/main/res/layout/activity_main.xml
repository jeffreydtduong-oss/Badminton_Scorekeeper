<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@drawable/gradient_background">

    <!-- Top Controls Row - Sound toggle and Bluetooth status -->
    <LinearLayout
        android:id="@+id/topControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Sound Toggle Button -->
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/soundToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Sound"
            android:textSize="8sp"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:checked="true"
            android:thumbTint="@color/white"
            android:trackTint="@color/design_default_color_primary"
            android:layout_marginEnd="8dp" />

        <!-- Bonus Sound Toggle Button -->
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/bonusSoundToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Bonus sound"
            android:textSize="8sp"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:checked="true"
            android:thumbTint="@color/white"
            android:trackTint="@color/design_default_color_primary"
            android:layout_marginEnd="8dp" />

        <!-- View History -->
        <Button
            android:id="@+id/historyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View History"
            android:textSize="10sp"
            android:layout_margin="2dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>

        <!-- Set points to win a game -->
        <Button
            android:id="@+id/winningPointsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game to 21 points"
            android:textSize="10sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>
    </LinearLayout>

    <!-- Singles Name Input Section -->
    <LinearLayout
        android:id="@+id/nameInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#E3F2FD"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topControls">

        <EditText
            android:id="@+id/player1NameInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Player 1 Name"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:textSize="12sp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/edit_text_bg"
            android:padding="8dp"
            android:textColor="#333333"
            android:textColorHint="#666666" />

        <Button
            android:id="@+id/saveNamesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:text="Save"
            android:textSize="10sp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:background="#4CAF50"
            android:textColor="@color/white"
            android:elevation="1dp" />

        <EditText
            android:id="@+id/player2NameInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Player 2 Name"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:textSize="12sp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/edit_text_bg"
            android:padding="8dp"
            android:textColor="#333333"
            android:textColorHint="#666666" />
    </LinearLayout>

    <!-- Doubles Team Names Display -->
    <LinearLayout
        android:id="@+id/teamNamesLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#E3F2FD"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topControls">

        <!-- Team 1 Name (clickable to edit) -->
        <TextView
            android:id="@+id/teamNamesDisplay1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Team 1\nPlayer 1 / Player 2"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/edit_text_bg"
            android:textColor="#333333"
            android:clickable="true"
            android:focusable="true"
            android:maxLines="2"
            android:ellipsize="none" />

        <View
            android:layout_width="16dp"
            android:layout_height="1dp" />

        <!-- Team 2 Name (clickable to edit) -->
        <TextView
            android:id="@+id/teamNamesDisplay2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Team 2\nPlayer 3 / Player 4"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/edit_text_bg"
            android:textColor="#333333"
            android:clickable="true"
            android:focusable="true"
            android:maxLines="2"
            android:ellipsize="none" />
    </LinearLayout>

    <!-- Score Container -->
    <LinearLayout
        android:id="@+id/scoreContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/score_container_bg"
        android:elevation="8dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomControls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameInputLayout">

        <!-- Player 1 Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp"
            android:background="@drawable/player1_bg">

            <!-- Singles Player 1 Header -->
            <LinearLayout
                android:id="@+id/player1Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="#2196F3"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp">

                <TextView
                    android:id="@+id/player1Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxEms="8" />

                <ImageView
                    android:id="@+id/serveIndicator1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/shuttle_image"
                    android:visibility="invisible"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Team 1 Layout -->
            <LinearLayout
                android:id="@+id/team1Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <!-- Team Name Display - Styled like singles but for doubles -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="#2196F3"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp">

                    <TextView
                        android:id="@+id/team1Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Team 1 Player 1 / Team 1 Player 2"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:maxEms="12" />

                    <ImageView
                        android:id="@+id/team1ServeIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/shuttle_image"
                        android:visibility="invisible"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <!-- Serving Indicator - Separate from the team name -->
                <TextView
                    android:id="@+id/team1ServeIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Serving: Player"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="#1976D2"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Score -->
            <TextView
                android:id="@+id/player1Score"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textSize="150sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.8"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:scaleX="1.1"
                android:scaleY="1.1"/>

            <LinearLayout
                android:id="@+id/player1ButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center">

                <Button
                    android:id="@+id/player1Button"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="+1"
                    android:textSize="12sp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/button_primary_bg"
                    android:textColor="@color/white"
                    android:elevation="2dp" />

                <Button
                    android:id="@+id/player1RemoveButton"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="-1"
                    android:textSize="12sp"
                    android:layout_marginStart="2dp"
                    android:background="@drawable/button_secondary_bg"
                    android:textColor="@color/white"
                    android:elevation="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Center Divider -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:layout_width="3dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/divider_gradient"
                android:layout_gravity="center"
                android:elevation="2dp" />
        </LinearLayout>

        <!-- Player 2 Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp"
            android:background="@drawable/player2_bg">

            <!-- Singles Player 2 Header -->
            <LinearLayout
                android:id="@+id/player2Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="#F44336"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp">

                <TextView
                    android:id="@+id/player2Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 2"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxEms="8" />

                <ImageView
                    android:id="@+id/serveIndicator2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/shuttle_image"
                    android:visibility="invisible"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Team 2 Layout -->
            <LinearLayout
                android:id="@+id/team2Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <!-- Team Name Display - Styled like singles but for doubles -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="#F44336"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp">

                    <TextView
                        android:id="@+id/team2Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Team 2 Player 3 / Team 2 Player 4"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:maxEms="12" />

                    <ImageView
                        android:id="@+id/team2ServeIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/shuttle_image"
                        android:visibility="invisible"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <!-- Serving Indicator - Separate from the team name -->
                <TextView
                    android:id="@+id/team2ServeIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Serving: Player"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="#D32F2F"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Score -->
            <TextView
                android:id="@+id/player2Score"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textSize="150sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.8"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:scaleX="1.1"
                android:scaleY="1.1"/>

            <LinearLayout
                android:id="@+id/player2ButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center">

                <Button
                    android:id="@+id/player2Button"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="+1"
                    android:textSize="12sp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/button_primary_bg"
                    android:textColor="@color/white"
                    android:elevation="2dp" />

                <Button
                    android:id="@+id/player2RemoveButton"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="-1"
                    android:textSize="12sp"
                    android:layout_marginStart="2dp"
                    android:background="@drawable/button_secondary_bg"
                    android:textColor="@color/white"
                    android:elevation="2dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Controls Area -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="4dp"
        android:background="#FFFFFF"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Instructions -->
        <TextView
            android:id="@+id/keyHelpText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Left=P1+1, Right=P2+1, Up=NG, Down=Undo, +=P1-1, -=P2-1, R-Hold=Swap Serve"
            android:textSize="7sp"
            android:background="#20000000"
            android:padding="4dp"
            android:gravity="center"
            android:textColor="#333333"
            android:layout_marginBottom="2dp"
            android:backgroundTint="#E3F2FD" />

        <!-- Bottom Buttons Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/doublesModeToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doubles Mode"
                android:textSize="8sp"
                android:elevation="1dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="2dp"
                android:thumbTint="@color/white"
                android:trackTint="@color/design_default_color_primary"
                android:layout_marginEnd="8dp" />

            <!-- New Game Button -->
            <Button
                android:id="@+id/resetButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/reset_button_bg"
                android:elevation="1dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="2dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="New Game"
                android:textColor="@color/white"
                android:textSize="8sp" />

            <!-- Swap Names Button -->
            <Button
                android:id="@+id/swapNamesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/reset_button_bg"
                android:elevation="1dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="2dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Swap Names"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>