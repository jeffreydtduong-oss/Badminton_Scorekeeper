<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:weightSum="2">

        <!-- Left Column: Team Setup -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team Setup"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="6dp" />

            <!-- Current Teams - Ultra Compact -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#f5f5f5"
                android:padding="4dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Teams"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Team 1 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="2dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Team 1"
                            android:textStyle="bold"
                            android:textSize="9sp" />

                        <TextView
                            android:id="@+id/team1Player1Preview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Player 1"
                            android:textSize="9sp"
                            android:paddingStart="4dp" />

                        <TextView
                            android:id="@+id/team1Player2Preview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Player 2"
                            android:textSize="9sp"
                            android:paddingStart="4dp" />
                    </LinearLayout>

                    <!-- Team 2 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="2dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Team 2"
                            android:textStyle="bold"
                            android:textSize="9sp" />

                        <TextView
                            android:id="@+id/team2Player1Preview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Player 3"
                            android:textSize="9sp"
                            android:paddingStart="4dp" />

                        <TextView
                            android:id="@+id/team2Player2Preview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Player 4"
                            android:textSize="9sp"
                            android:paddingStart="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Compact Player Management -->
            <Button
                android:id="@+id/selectPlayersButton"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Select Players"
                android:textSize="10sp"
                android:layout_marginBottom="6dp" />

            <!-- Compact Add Player -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/newPlayerInput"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:hint="New player"
                    android:textSize="10sp"
                    android:maxLines="1" />

                <Button
                    android:id="@+id/addPlayerButton"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:text="Add"
                    android:textSize="10sp"
                    android:layout_marginStart="2dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Right Column: Serve Configuration -->
        <LinearLayout
            android:id="@+id/serveConfigLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:text="Serve Setup"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#f0f0f0"
                android:padding="4dp">

                <!-- Server Selection -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Server:"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:layout_marginBottom="2dp" />

                <Spinner
                    android:id="@+id/serverSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="6dp"
                    android:textSize="10sp" />

                <!-- Receiver Selection -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Receiver:"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:layout_marginBottom="2dp" />

                <Spinner
                    android:id="@+id/receiverSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="6dp"
                    android:textSize="10sp" />

                <!-- Note about position calculation -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Positions calculated from current score"
                    android:textSize="8sp"
                    android:textColor="#666"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>